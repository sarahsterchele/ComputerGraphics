#gouraud shading with 1 light
{
	gouraud
	surface (1, 1, 1) 1 64
	rotate Y -45

	camera -1 -1 1 1 1 50

	translate 1 0  1
	ambient (.7, .7, .7)
	light .8 .8 .8 1 .1
	translate 0 0 0

	scale 2 2 2
	translate 0 0 3
	mesh boxcolor
	translate 0 0 -3
	scale .5 .5 .5

	rotate X 45
	translate 0 0 3
	scale 2 2 2

	translate -3 -3 3
	mesh boxcolor
}

